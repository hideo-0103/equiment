#account-page
.h-100.bg-light
  .text-center.border-bottom.py-3.mb-5.bg-dark
    .h1.text-light
      設備管理システム
  .container
    %section.p-5.m-5.card
      %h2.mb-5.text-center Create Account
      .container.card-body
        %ul.nav.nav-tabs.my-5
          %li.nav-item
            %a{:href => "#ios",:data => {:toggle=>"tab"},:class =>"nav-link active"} 新規アカウントの作成
          %li.nav-item
            -# %a{:href => "#android",:data => {:toggle=>"tab"},:class =>"nav-link"}  
            = render "devise/shared/links", id:'ios',class:"nav-link ml-5"
        = form_for(resource, as: resource_name,class:'form-signin border', url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          = f.label :'名前'
          = f.text_field :name, autofocus: true,placeholder:'名前を入力',class:'form-control',style:'border:none;'
          .border-bottom.py-3.mb-5
          = f.label :email
          = f.email_field :email,placeholder:'emailアドレス',class:'form-control',style:'border:none;'
          .border-bottom.py-3.mb-5
          = f.label :password
          = f.password_field :password, autocomplete: "off",placeholder:'password(英数字8文字以上)',class:'form-control',style:'border:none;'
          .border-bottom.py-3.mb-5
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off",placeholder:'password(英数字8文字以上)',class:'form-control',style:'border:none;'
          .border-bottom.py-3.mb-5
          = f.submit "Create Account", class: 'btn btn-lg btn-primary btn-block mt-5'
