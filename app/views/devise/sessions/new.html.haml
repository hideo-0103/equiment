#account-page
.h-100.bg-light
  .text-center.border-bottom.py-3.mb-5.bg-dark
    .h1.text-light
      設備管理システム
  .container
    %section.p-5.my-5.card
      %h2.mb-5.text-center ログイン
      .container.card-body
        %ul.nav.nav-tabs.my-5
          %li.nav-item
            %a{:href => "#ios",:data => {:toggle=>"tab"},:class =>"nav-link active"} ログイン
          %li.nav-item
            -# %a{:href => "#android",:data => {:toggle=>"tab"},:class =>"nav-link"}  
            = render "devise/shared/links", id:'ios',class:"nav-link ml-5"
        = form_for(resource, as: resource_name,class:'form-signin', url: session_path(resource_name)) do |f|
          = devise_error_messages!
          = f.label :email
          = f.email_field :email, autofocus: true,placeholder:'email',class:'form-control',style:'border:none;'
          .border-bottom.py-3.mb-5
          = f.label :password
          %i (英数字8文字以上)
          = f.password_field :password, autocomplete: "off",placeholder:'password(英数字8文字以上)',class:'form-control',style:'border:none;'
          .border-bottom.py-3
          = f.submit "Log in", class: 'btn btn-lg btn-primary btn-block mt-5'
